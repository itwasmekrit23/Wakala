<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="meInfo"
            type="com.kraken.wakala.models.User" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnPrimary">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/vector_background"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/button_icon_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/go_to_settings"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icons8_settings_48px" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:fillViewport="true"
            android:layout_below="@id/button_icon_settings">
            <LinearLayout
                android:id="@+id/linear_layout_me_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="80dp"
                android:paddingBottom="100dp"
                android:background="@color/design_default_color_on_primary"
                android:paddingHorizontal="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:layout_marginBottom="18dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dropdown_gender_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="5"
                        android:hint="@string/text_hint_gender"
                        style="@style/dropdown_rounded_box_corner">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            app:simpleItems="@array/gender_items"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/date_picker_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="@string/text_hint_dob"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/icons8_calendar_24px"
                        style="@style/dropdown_rounded_box_corner">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:clickable="true"
                            android:text="@{meInfo.dob}" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_field_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="488dp"
                    android:layout_marginBottom="18dp"
                    android:hint="@string/text_email_hint"
                    style="@style/text_field_rounded_box_corner"
                    app:startIconDrawable="@drawable/icons8_email_sign_24px">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="@{meInfo.email}"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_field_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="488dp"
                    android:hint="@string/text_phone_hint"
                    style="@style/text_field_rounded_box_corner"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:startIconDrawable="@drawable/icons8_phone_24px">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={meInfo.phone}"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_field_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="488dp"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/text_address_hint"
                    style="@style/text_field_rounded_box_corner"
                    app:startIconDrawable="@drawable/icons8_address_24px">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={meInfo.address}"
                        android:inputType="textPostalAddress"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <Button
                        android:id="@+id/button_save_changes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="16dp"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:text="@string/text_button_save_changes"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_icon_settings">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_me_profile_photo"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:src="@drawable/vector_background"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:padding="1dp"
                app:strokeWidth="2dp"
                app:shapeAppearanceOverlay="@style/circlet_image_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="0dp"
                        android:src="@drawable/icons8_time_24px"
                        android:contentDescription="@string/text_des_review_personal_information"
                        android:backgroundTint="@android:color/transparent"
                        android:tooltipText="@string/text_tip_active_hours"
                        app:tint="@color/design_default_color_on_primary" />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_me_active_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{meInfo.activeHour+`h`}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/design_default_color_on_primary"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="0dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/icons8_trainers_24px"
                        android:contentDescription="@string/text_des_review_personal_information"
                        android:backgroundTint="@android:color/transparent"
                        android:tooltipText="@string/text_tip_finished_distance"
                        app:tint="@color/design_default_color_on_primary"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_me_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{meInfo.distance+`km`}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/design_default_color_on_primary"/>
                </LinearLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:gravity="center_vertical"
                    android:text="@{meInfo.name}"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar_load_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:indeterminate="true"/>
    </RelativeLayout>
</layout>